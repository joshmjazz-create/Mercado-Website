{
  "version": 2,
  "buildCommand": "vite build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "GOOGLE_API_KEY": "@google-api-key",
    "GOOGLE_CALENDAR_ID": "@google-calendar-id", 
    "GOOGLE_DRIVE_CREDENTIALS": "@google-drive-credentials"
  }
}